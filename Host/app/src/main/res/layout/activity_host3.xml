<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:CustomTitleView="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:text="HostActivity3"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn1"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:text="反射获取BigLibrary的View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/btn2"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:text="反射调用BigLibrary的带参带返方法"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.kester.midlibrary.MLView1
        CustomTitleView:titleText="View From MidLibrary"
        CustomTitleView:titleTextColor="#000000"
        CustomTitleView:titleTextSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
</LinearLayout>